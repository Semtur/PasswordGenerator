<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+id/bar_background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="#d6d3d3"
                android:centerY="0.75"
                android:endColor="#d6d3d3"
                android:startColor="#d6d3d3" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="0"
                    android:centerColor="@color/colorPasswordStrong"
                    android:centerY="0.75"
                    android:endColor="@color/colorPasswordBest"
                    android:startColor="@color/colorPasswordWeak" />
            </shape>
        </clip>
    </item>

</layer-list>